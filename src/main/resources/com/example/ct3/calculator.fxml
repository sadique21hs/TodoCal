<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ct3.CalculatorController">
   <children>
      <Label layoutX="251.0" layoutY="57.0" text="Calculate" underline="true">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="num1"  layoutX="84.0" layoutY="106.0" prefHeight="25.0" prefWidth="78.0" promptText="Number 1" />
      <TextField fx:id="num2"  layoutX="429.0" layoutY="106.0" prefHeight="25.0" prefWidth="78.0" promptText="Number 2" />
      <Button fx:id="sum" onAction="#handleOperator" layoutX="137.0" layoutY="175.0" mnemonicParsing="false" text="+" />
      <Button fx:id="sub" onAction="#handleOperator"  layoutX="239.0" layoutY="175.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" text="-" />
      <Button fx:id="mul" onAction="#handleOperator" layoutX="343.0" layoutY="175.0" mnemonicParsing="false" text="*" />
      <Button fx:id="div" onAction="#handleOperator" layoutX="435.0" layoutY="175.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="25.0" text="/" />
      <TextField fx:id="operation" layoutX="265.0" layoutY="106.0" prefHeight="25.0" prefWidth="51.0" />
      <Button fx:id="back" onAction="#goBack" layoutX="222.0" layoutY="294.0" mnemonicParsing="false" text="&lt;--" />
      <Button fx:id="resultbtn" onAction="#calculateResult" layoutX="353.0" layoutY="294.0" mnemonicParsing="false" text="=" />
      <TextField fx:id="result" layoutX="226.0" layoutY="222.0" promptText="Here is your result" />
   </children>
</AnchorPane>

